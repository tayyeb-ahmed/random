# Create a COM object for WScript.Shell
$wsh = New-Object -ComObject WScript.Shell

# Infinite loop
while ($true) {
    #activate the Microsoft Teams window
    if ($wsh.AppActivate("Teams")) {
        Start-Sleep -Milliseconds 500 # Allow time for the window to activate

        # Send CTRL+2 to Microsoft Teams
        $wsh.SendKeys("^{2}")
    } else {
        Write-Host "Microsoft Teams window not found. Retrying..."
    }
    Start-Sleep -Seconds 280
}
